{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/SriramVisw/week-10-hw/master/data/World%20Healthcare%20employment.csv"
    },
    "width": "container",
    "height": 400,
    "config": {
        "view": {
            "strokeWidth": 0
        }
    },
    "title": {
        "text": "OECD Countries with the most Healthcare workers"
    },
    "params": [
        {
            "name": "Rank_Above",
            "value": 15,
            "bind": {
                "input": "range",
                "min": 10,
                "max": 19,
                "step": 1,
                "name": "Number of Countries to compare: "
            }
        }
    ],
    "transform": [
        {
            "filter": "datum.Rank <= Rank_Above"
        }
    ],
    "encoding": {
        "x": {
            "field": "Employment Density",
            "type": "quantitative",
            "axis": {
                "gridDash": [
                    10,
                    10
                ],
                "domainColor": "white",
                "tickColor": "white",
                "labelColor": "black",
                "titleColor": "black",
                "values": [],
                "title": null
            }
        },
        "y": {
            "field": "Country",
            "type": "nominal",
            "title": "",
            "sort": null,
            "axis": {
                "domainColor": "white",
                "tickColor": "white",
                "labelColor": "black",
                "titleColor": "black"
            }
        },
        "color": {
            "legend": null,
            "field": "Country",
            "scale": {
                "domain": [
                    "Norway",
                    "Denmark",
                    "Sweden",
                    "Netherlands",
                    "Switzerland",
                    "Luxembourg",
                    "Finland",
                    "Germany",
                    "Australia",
                    "Japan",
                    "United States",
                    "Iceland",
                    "United Kingdom",
                    "Canada",
                    "France",
                    "Belgium",
                    "New Zealand",
                    "Ireland",
                    "Austria"
                ],
                "range": [
                    "gray",
                    "gray",
                    "gray",
                    "gray",
                    "gray",
                    "gray",
                    "gray",
                    "gray",
                    "#1663be",
                    "gray",
                    "gray",
                    "gray",
                    "gray",
                    "gray",
                    "gray",
                    "gray",
                    "gray",
                    "gray",
                    "gray"
                ]
            }
        },
        "tooltip": [
            {
                "field": "Country",
                "type": "nominal",
                "title": "Country"
            },
            {
                "field": "Employment Density",
                "type": "quantitative",
                "title": "Employment Density"
            }
        ]
    },
    "layer": [
        {
            "mark": "bar"
        },
        {
            "mark": {
                "type": "text",
                "fontWeight": "bold",
                "align": "left",
                "baseline": "middle",
                "dx": 3
            },
            "encoding": {
                "text": {
                    "field": "Employment Density",
                    "type": "quantitative"
                }
            }
        },
        {
            "transform": [
                {
                    "calculate": "datum.Country + ' ranks 8th '",
                    "as": "anno"
                },
                {
                    "filter": "datum.Country == 'Australia'"
                }
            ],
            "mark": {
                "type": "text",
                "dx": -60
            },
            "encoding": {
                "text": {
                    "field": "anno",
                    "type": "nominal"
                },
                "color": {
                    "value": "white"
                }
            }
        }
    ]
}